<div class="mb-3">
  <div class="card dashboard-card">
    <div class="list-item">
      <div class="card-header">
        <span>{{title}}</span>
        <span class="float-right">Posted by:
          {{User.name}}
        </span>
      </div>
      <div class="card-body content-card">
        {{post}}
      </div>
    </div>
  </div>
  <div class="card dashboard-card">
    <div class="card-header">
      <h4>Add Comment</h4>
    </div>
    <form method="POST" action="/api/comments" class="card-body">
      <div class="card-body content-card">
        <div class="form-group">
          <input
            type="text"
            name="post_id"
            value="{{id}}"
            id="post_id"
            hidden
          />
          <label for="commentary">Comment</label>
          <textarea
            type="text"
            name="commentary"
            id="commentary"
            class="col-sm-12 form-input"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-dark col-sm-12">Add Comment</button>
      </div>
    </form>
  </div>
</div>
{{#each Comments as |comment|}}
  <div class="card dashboard-card">
    <div class="card-body content-card">
      <h4>{{comment.comment}}</h4>
      <footer class="blockquote-footer">Commented by:
        {{User.name}}
      </footer>
    </div>
  </div>
{{/each}}